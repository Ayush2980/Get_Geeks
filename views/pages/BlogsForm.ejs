<% layout("layout/boilerplate") %>
<div class="container-fluid">
    <%- include('../partials/flash-success.ejs')%>
    <%- include('../partials/flash-error.ejs')%>
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <form action="/Blogs/addNew/<%= loggedin._id%>" method="POST" novalidate class="validated-form">            
                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="Title" name="title" placeholder="Title(e.g. DP)">
                </div>
                <div class="mb-3">
                    <label for="Text" class="form-label">Blog Text</label>
                    <textarea class="form-control" id="Text" rows="3" name="body" ></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">POST</button>
                </div>
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
  