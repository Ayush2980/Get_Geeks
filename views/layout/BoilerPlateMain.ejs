  <body class="d-flex flex-column" style="height: 100vh" id="show-body">
    <%- include('../partials/Navbar/navbar.ejs'); %>
    <main
      class="container mt-5"
      id="main-body"
      style="
        display: none;
        justify-content: center;
        align-items: center;
        position: relative;
        margin-bottom: 5%;
      "
    >
      <%- body%>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>

    <%- include('../partials/loader.ejs'); %> <%-
    include('../partials/ClientSideFlash/flash-success.ejs'); %> <%-
    include('../partials/ClientSideFlash/flash-error.ejs'); %> <%-
    include('../partials/Footer/footer.ejs') %> <%-
    include('../partials/BottomNavigation/BottomNavigation.component.ejs') %>

    <script src="/JavaScript/ClientFlash/FlashController.js"></script>
    <script>
      window.addEventListener("load", () => {
        document.getElementById("show-body").style.height = "100%";
        document.getElementById("loader").style.display = "none";
        document.getElementById("main-body").style.display = "flex";
      });
    </script>
  </body>
