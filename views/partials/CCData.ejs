<div class="card-containerr">
  <div class="left">
    <img class="round" src="<%= dp%>" alt="user" />
    <h3 id="CC-user-name"><%= username%></h3>
    <% if(country){ %>
    <h6><img src="<%= flag%>" /><%= country%></h6>
    <% } %>
    <div class="row" style="margin: 5% 0%">
      <div class="col-6" style="border-right: 3px solid grey">
        <h6>Current Status :</h6>
        <h6>Rating : <%= ratingNo %></h6>
        <div class="curr-rating-star"><%- currRatingHtml%></div>
      </div>
      <div class="col-6">
        <h6>Peak Status :</h6>
        <h6>Peak Rating : <%= maxRating %></h6>
        <div class="curr-rating-star"><%- maxRatingHtml%></div>
      </div>
    </div>
    <div class="row" style="margin: 5% 0%">
      <div class="col-6" style="border-right: 3px solid grey">
        <h6>Global Rank</h6>
        <h6><%= globalRank%></h6>
      </div>
      <div class="col-6">
        <h6>Country Rank</h6>
        <h6><%= countryRank%></h6>
      </div>
    </div>
    <% if(loggedin){ %>
    <div class="buttons">
      <% if(loggedin && loggedin.Stalklist.find(obj => obj.name === username)){
      %>
      <button class="primary remove-stalklist">Remove From Stalklist</button>
      <button class="primary add-stalklist" style="display: none">
        Add To StalkList
      </button>
      <% }else{ %>
      <button class="primary remove-stalklist" style="display: none">
        Remove From Stalklist
      </button>
      <button class="primary add-stalklist">Add To StalkList</button>
      <% } %>
    </div>
    <% } %>
  </div>
  <div class="right row">
    <div class="col"><%- heatmapSvg%></div>
    <div class="col"><%- ratingGraph%></div>
  </div>
</div>

<link rel="stylesheet" href="stylesheets/data/dataCF.css" />
<script src="JavaScript/Profile/CCData.js"></script>
