<div class="row my-5">
    <div class="col rounded">
      <div class="p-3 rounded" style="background-color: #032d45;">
              <div class="card custom-bg-ai">
                <div class="img-cont mt-4 mb-4">
                      <div class="row">
                          <div class="col-4"></div>
                          <div class="col-4">
                            <img src= "<%= currUser.images.url %>"  style="height: 50%;" class="rounded-circle" alt="...">
                          </div>
                          <div class="col-2"></div>
                      </div>
                  </div>
                  <div class="card-body">
                      <ul class="nav nav-tabs" id="pills-tab-friends" role="tablist">
                          <li class="nav-item mx-2" role="presentation">
                            <button class="nav-link custom-btn-color active" id="pills-friend-details-tab" data-bs-toggle="pill" data-bs-target="#pills-friends-details" type="button" role="tab" aria-controls="pills-friends-details" aria-selected="true">Details</button>
                          </li>
                          <li class="nav-item mx-2" role="presentation">
                            <button class="nav-link custom-btn-color" id="pills-friend-recents-tab" data-bs-toggle="pill" data-bs-target="#pills-recents-friends" type="button" role="tab" aria-controls="pills-recents-friends" aria-selected="false">Recents</button>
                          </li>
                        </ul>
                        <div class="tab-content" id="pills-tabContent">
                          <div class="tab-pane px-4 py-4 rounded text-white show active" id="pills-friends-details" role="tabpanel" aria-labelledby="pills-friend-details-tab">
                              <h4 class="my-4">Username : <%= currUser.username%></h4>
                              <p>Full Name : <%= currUser.fullname%></p>
                              <p>Location : <%= currUser.state%> , <%= currUser.country%></p>
                              <p>Current Rating : <%= currUser.ratingNo%></p>
                              <p>Code Chef Profile : <%= currUser.CCprof %></p>
                              <p>Codeforces Profile : <%= currUser.CFprof %></p>
                          </div>
                          <div class="tab-pane px-4 py-4 rounded text-white" id="pills-recents-friends" role="tabpanel" aria-labelledby="pills-friend-recents-tab">
                            <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Followers">Followers</button>
                                
                                <!-- Modal -->
                                <div class="modal fade" id="Followers" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Followers</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                        ...
                                        </div>
                                        <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary">Save changes</button>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                          </div>
                        </div>
                  </div>
                </div>
          </div>
        </div>
  </div>